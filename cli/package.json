    "@ledgerhq/hw-transport-http": "5.12.0",
    "@ledgerhq/hw-transport-mocker": "5.12.0",
    "@ledgerhq/hw-transport-node-hid": "5.12.0",
    "@ledgerhq/hw-transport-node-speculos": "^5.12.0",
    "@ledgerhq/ledger-core": "^6.1.1",
    "@ledgerhq/live-common": "^12.7.0",
    "@ledgerhq/logs": "5.11.0",
    "asciichart": "^1.5.11",
    "bignumber.js": "^9.0.0",
    "body-parser": "^1.19.0",
    "command-line-args": "^5.1.1",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "flow-bin": "^0.120.1",
    "flow-typed": "^3.0.0",
    "lodash.product": "^18.9.19",
    "qrcode-terminal": "^0.12.0",
    "qrloop": "^1.0.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-redux": "^7.2.0",
    "rxjs": "^6.5.4",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.3",
    "@babel/core": "^7.9.0",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
