{
  "extends": ["@tsconfig/react-native/tsconfig.json", "../../tsconfig.base"],
  "compilerOptions": {
    "allowJs": false,
    "checkJs": false,
    "incremental": true,
    "jsx": "react-native",
    "lib": ["es2017"],
    "noEmit": true,
    "types": [
      "react-native",
      "jest",
      "@testing-library/jest-native/extend-expect"
    ]
  },
  "include": ["src/**/*", "e2e/**/*", "**/*.d.ts", "services/**/*"],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "**/*.js"
  ]
}
