{
  "extends": "../../tsconfig.base",
  "compilerOptions": {
    "moduleResolution": "bundler",
    "module": "preserve",
    "allowJs": false,
    "checkJs": false,
    "jsx": "react-native",
    "lib": ["es2017", "DOM"],

    "types": [
      "jest",
      "@testing-library/jest-native/extend-expect",
      "jest-allure2-reporter/globals"
    ],
    "noEmit": true,
    "target": "esnext",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"],
      "LLM/*": ["src/newArch/*"],
      "@tests/*": ["__tests__/*"],
      "@mocks/*": ["__mocks__/*"]
    }
  },
  "include": ["src/**/*", "e2e/**/*", "**/*.d.ts", "services/**/*", "types/**/*"],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "**/*.js",
    "src/mocks/init.ts"
  ]
}
