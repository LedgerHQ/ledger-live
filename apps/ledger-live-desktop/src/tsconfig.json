{
  "compilerOptions": {
    "composite": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "module": "es2020",
    "jsx": "react",
    "lib": ["es6", "dom"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"]
    },
    "skipLibCheck": true,
    "sourceMap": true,
    "outDir": "tests/tests-out",
    "rootDir": "."
  },
  "include": ["./**/*"],
  "references": [{ "path": "../" }]
}
