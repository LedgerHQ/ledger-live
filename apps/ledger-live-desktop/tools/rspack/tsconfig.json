{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "nodeNext",
    "moduleResolution": "nodeNext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": false,
    "outDir": "./dist",
    "rootDir": "..",
    "baseUrl": ".",
    "paths": {
      "~/*": ["../../src/*"]
    }
  },
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "include": ["./**/*.ts", "../main-rspack.ts"],
  "exclude": ["node_modules", "dist"]
}
