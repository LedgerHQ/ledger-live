{
  "extends": "../../tsconfig.base",
  "compilerOptions": {
    "composite": true,
    "module": "es2020",
    "jsx": "react",
    "lib": ["es6", "dom"],
    "target": "esnext",
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "~/*": ["src/*"],
      "tests/*": ["./tests/*"]
    },
    "outDir": "dist"
  },
  "exclude": ["**/node_modules/*"],
  "include": [
    "src",
    "static/**/*.json",
    "src/renderer/styles/palettes/*.json",
    "src/renderer/animations/*/*.json",
    "package.json",
    "release-notes.json"
  ]
}
