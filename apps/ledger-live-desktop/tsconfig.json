{
  "extends": "../../tsconfig.base",
  "compilerOptions": {
    "composite": true,
    "module": "es2020",
    "jsx": "react",
    "lib": ["es6", "dom"],

    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "~/*": ["src/*"],
      "tests/*": ["./tests/*"]
    }
  },
  "include": ["src"],
  "files": ["package.json", "release-notes.json"],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "./scripts",
    "./lib"
  ]
}
