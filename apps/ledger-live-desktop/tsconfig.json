{
  "extends": "../../tsconfig.base",
  "compilerOptions": {
    "allowJs": false,
    "composite": true,
    "jsx": "react",
    "lib": ["ES2021", "dom"],
    "target": "esnext",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "~/*": ["src/*"],
      "tests/*": ["tests/*"],
      "LLD/*": ["src/newArch/*"]
    },
    "outDir": "dist",
    "typeRoots": ["index-types.d.ts", "./node_modules/@types", "./node_modules/@testing-library"]
  },
  "exclude": ["**/node_modules/*"],
  "include": [
    "src",
    "static/**/*.json",
    "src/renderer/styles/palettes/*.json",
    "src/renderer/animations/*/*.json",
    "src/renderer/screens/settings/sections/General/regions.json",
    "package.json",
    "release-notes.json",
    "tests",
    "tests/handlers/**/*.json",
    "index-types.d.ts",
    "tests/jestSetup.ts"
  ]
}
