{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended", ":dependencyDashboard"],
  "dependencyDashboard": true,
  "labels": ["dependencies"],
  "automerge": false,
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": ["security"]
  },
  "packageRules": [
    {
      "description": "LDLS UI React - version updates",
      "matchPackageNames": ["@ledgerhq/ldls-ui-react"],
      "matchFileNames": ["apps/ledger-live-desktop/package.json"],
      "commitMessagePrefix": "chore(desktop):",
      "commitMessageTopic": "update {{depName}}",
      "commitMessageExtra": "to {{newVersion}}",
      "labels": ["dependencies", "ui", "ldls"],
      "reviewers": ["ledgerhq/live-hub"],
      "assignees": ["ledgerhq/live-hub"],
      "prPriority": 10
    },
    {
      "description": "LDLS Design Core - Catalog updates",
      "matchPackageNames": ["@ledgerhq/ldls-design-core"],
      "matchFileNames": ["pnpm-workspace.yaml"],
      "commitMessagePrefix": "chore:",
      "commitMessageTopic": "update {{depName}} catalog",
      "commitMessageExtra": "to {{newVersion}}",
      "labels": ["dependencies", "ui", "ldls", "catalog"],
      "reviewers": ["ledgerhq/live-hub"],
      "assignees": ["ledgerhq/live-hub"],
      "prPriority": 10
    },
    {
      "description": "Core Ownership Rules",
      "reviewers": ["ledgerhq/live-hub"],
      "assignees": ["ledgerhq/live-hub"],
      "matchPackageNames": [
        "/changesets/",
        "/commitlint/",
        "/esbuild/",
        "/eslint/",
        "/prettier/",
        "/turbo/",
        "/typescript/",
        "/vite/",
        "/zx/"
      ]
    },
    {
      "description": "Electron linked updates",
      "groupName": "electron",
      "reviewers": ["ledgerhq/live-hub"],
      "assignees": ["ledgerhq/live-hub"],
      "matchPackageNames": [
        "/electron/",
        "/^@electron/",
        "!@sentry/electron",
        "!electron-context-menu",
        "!electron-store",
        "!vite-plugin-electron"
      ]
    },
    {
      "description": "Metro linked updates",
      "matchPackageNames": [
        "metro",
        "metro-core",
        "metro-config",
        "metro-resolver",
        "metro-runtime",
        "metro-source-map",
        "metro-transform-worker"
      ],
      "groupName": "metro",
      "reviewers": ["ledgerhq/live-hub"],
      "assignees": ["ledgerhq/live-hub"]
    },
    {
      "extends": ["monorepo:expo"],
      "groupName": null
    }
  ],
  "prConcurrentLimit": 10,
  "separateMinorPatch": true,
  "timezone": "Europe/Paris",
  "enabledManagers": ["npm"]
}
