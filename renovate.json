{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended", ":dependencyDashboard"],
  "dependencyDashboard": true,
  "labels": ["dependencies"],
  "automerge": false,
  "detectGlobalManagerConfig": true,
  "ignoreScripts": false,
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": ["security"],
    "prPriority": 999
  },
  "packageRules": [
    {
      "description": "LDLS UI React - version updates",
      "matchPackageNames": ["@ledgerhq/ldls-ui-react"],
      "matchFiles": ["apps/ledger-live-desktop/package.json"],
      "prTitle": "feat(desktop): update {{depName}} to {{newVersion}}",
      "commitMessageTopic": "{{depName}}",
      "commitMessageAction": "update",
      "labels": ["dependencies", "ui", "ldls"],
      "reviewers": ["team:@ledgerhq/live-hub"],
      "assignees": ["team:@ledgerhq/live-hub"]
    },
    {
      "description": "LDLS Design Core - Catalog updates",
      "matchPackageNames": ["@ledgerhq/ldls-design-core"],
      "matchFiles": ["pnpm-workspace.yaml"],
      "prTitle": "feat: update {{depName}} catalog to {{newVersion}}",
      "commitMessageTopic": "{{depName}} catalog",
      "commitMessageAction": "update",
      "labels": ["dependencies", "ui", "ldls", "catalog"],
      "reviewers": ["team:@ledgerhq/live-hub"],
      "assignees": ["team:@ledgerhq/live-hub"]
    },
    {
      "description": "Core Ownership Rules",
      "matchPackagePatterns": [
        "changesets",
        "commitlint",
        "esbuild",
        "eslint",
        "prettier",
        "turbo",
        "typescript",
        "vite",
        "zx"
      ],
      "reviewers": ["team:@ledgerhq/live-eng-core"]
    },
    {
      "description": "Electron linked updates",
      "matchPackagePatterns": ["electron", "^@electron"],
      "excludePackageNames": [
        "@sentry/electron",
        "electron-context-menu",
        "electron-store",
        "vite-plugin-electron"
      ],
      "groupName": "electron",
      "reviewers": ["team:@ledgerhq/live-eng-core", "team:@ledgerhq/live-hub"]
    },
    {
      "description": "Metro linked updates",
      "matchPackageNames": [
        "metro",
        "metro-core",
        "metro-config",
        "metro-resolver",
        "metro-runtime",
        "metro-source-map",
        "metro-transform-worker"
      ],
      "groupName": "metro",
      "reviewers": ["team:@ledgerhq/live-eng-core", "team:@ledgerhq/live-hub"]
    },
    {
      "extends": "monorepo:expo",
      "groupName": null
    }
  ],
  "prConcurrentLimit": 5,
  "separateMinorPatch": true,
  "timezone": "Europe/Paris",
  "enabledManagers": ["npm"]
}
