{
  "name": "ledger-live-mobile-e2e-tests",
  "version": "0.12.0",
  "private": true,
  "scripts": {
    "lint": "eslint . --ext .ts,.tsx --cache",
    "lint:fix": "pnpm lint --fix",
    "typecheck": "node ./scripts/typecheck.js",
    "test:detox": "pnpm detox test",
    "test:ios": "pnpm test:detox --configuration ios.sim.release",
    "test:android": "pnpm test:detox --configuration android.emu.release",
    "build:ios": "pnpm --filter live-mobile run e2e:build --configuration ios.sim.release",
    "build:android": "pnpm --filter live-mobile run e2e:build --configuration android.emu.release",
    "test:ios:debug": "pnpm test:detox --configuration ios.sim.debug",
    "test:android:debug": "pnpm test:detox --configuration android.emu.debug",
    "build:ios:debug": "pnpm --filter live-mobile run e2e:build --configuration ios.sim.debug",
    "build:android:debug": "pnpm --filter live-mobile run e2e:build --configuration android.emu.debug",
    "allure:generate": "allure generate ./artifacts --clean -o ./artifacts/allure-report",
    "allure:open": "allure open ./artifacts/allure-report"
  },
  "dependencies": {
    "@ledgerhq/logs": "workspace:^",
    "invariant": "2.2.4",
    "rxjs": "catalog:"
  },
  "devDependencies": {
    "@jest/reporters": "catalog:",
    "@jest/types": "^30.2.0",
    "@ledgerhq/devices": "workspace:*",
    "@ledgerhq/hw-transport": "workspace:*",
    "@ledgerhq/ledger-key-ring-protocol": "workspace:^",
    "@ledgerhq/live-common": "workspace:^",
    "@ledgerhq/live-dmk-speculos": "workspace:^",
    "@ledgerhq/live-env": "workspace:^",
    "@ledgerhq/live-wallet": "workspace:^",
    "@ledgerhq/test-utils": "workspace:^",
    "@ledgerhq/types-cryptoassets": "workspace:^",
    "@ledgerhq/types-devices": "workspace:^",
    "@ledgerhq/types-live": "workspace:^",
    "@types/body-parser": "1.19.5",
    "@types/cors": "2.8.17",
    "@types/express": "4.17.21",
    "@types/invariant": "2.2.37",
    "@types/jest": "catalog:",
    "@types/lodash": "4.17.0",
    "@types/ws": "8.5.10",
    "@typescript-eslint/eslint-plugin": "catalog:",
    "@typescript-eslint/parser": "catalog:",
    "allure-commandline": "2.28.0",
    "babel-jest": "catalog:",
    "babel-plugin-module-resolver": "^5.0.2",
    "bignumber.js": "9.1.2",
    "body-parser": "2.2.2",
    "cors": "2.8.5",
    "detox": "20.46.3",
    "detox-allure2-adapter": "1.0.0-alpha.42",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-json": "3.1.0",
    "eslint-plugin-prettier": "5.1.3",
    "expect": "catalog:",
    "express": "5.2.1",
    "glob": "^11.0.1",
    "jest": "catalog:",
    "jest-allure2-reporter": "2.2.8",
    "jest-docblock": "catalog:",
    "jest-environment-node": "catalog:",
    "jest-metadata": "1.6.0",
    "lodash": "4.17.21",
    "@swc/jest": "catalog:",
    "@swc/core": "catalog:",
    "ts-node": "10.9.2",
    "tsconfig-paths": "^4.2.0",
    "ws": "catalog:"
  }
}
