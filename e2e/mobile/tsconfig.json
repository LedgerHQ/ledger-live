{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "experimentalDecorators": true,
    "checkJs": false,
    "jsx": "react-native",
    "lib": [
      "es2017",
      "DOM"
    ],
    "skipLibCheck": true,
    "noEmit": true,
    "baseUrl": ".",
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ],
    "paths": {
      "LLM/*": [
        "../../apps/ledger-live-mobile/src/newArch/*"
      ],
      "~/*": [
        "../../apps/ledger-live-mobile/src/*"
      ],
      "@ledgerhq/live-common/e2e/*": [
        "../../libs/ledger-live-common/src/e2e/*"
      ],
      "@ledgerhq/live-common/lib/e2e/*": [
        "../../libs/ledger-live-common/src/e2e/*"
      ],
      "@ledgerhq/live-common/hw/index": [
        "../../libs/ledger-live-common/src/hw/index"
      ],
      "@ledgerhq/live-common/hw/deviceAccess": [
        "../../libs/ledger-live-common/src/hw/deviceAccess"
      ]
    }
  },
  "include": [
    "types",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "jest.config.js",
    "**/*.js"
  ]
}
