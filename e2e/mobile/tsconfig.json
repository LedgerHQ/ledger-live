{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "strict": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "checkJs": false,
    "jsx": "react-native",
    "module": "NodeNext",
    "lib": [
      "es2017",
      "DOM"
    ],
    "allowJs": false,
    "target": "esnext",
    "skipLibCheck": true,
    "noEmit": true,
    "incremental": true,
    "baseUrl": ".",
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ],
    "paths": {
      "LLM/*": [
        "../../apps/ledger-live-mobile/src/newArch/*"
      ],
      "~/*": [
        "../../apps/ledger-live-mobile/src/*"
      ]
    }
  },
  "include": [
    "types",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "jest.config.js",
    "**/*.js",
    "../../apps/ledger-live-mobile/src/**/*"
  ]
}
