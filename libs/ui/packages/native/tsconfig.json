{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react-native",
    "composite": true,
    "declarationMap": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "strict": true,
    "baseUrl": ".",
    "preserveSymlinks": true
  },
  "include": ["src/**/*", "storybook/**/*"],
  "exclude": [
    ".expo",
    ".expo-shared",
    "scripts",
    "assets",
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "scripts",
    "lib"
  ]
}
