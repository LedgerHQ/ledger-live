{
  "compilerOptions": {
    "composite": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": [
      "es2019",
      "dom"
    ],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "target": "ESNext",
    "baseUrl": ".",
    "skipLibCheck": true,
    "rootDir": "./src",
    "outDir": "./lib",
    "preserveSymlinks": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "./scripts",
    "./lib"
  ]
}