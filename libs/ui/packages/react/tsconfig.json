{
  "extends": "../../../../tsconfig.base",
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "jsx": "react",
    "lib": ["es2019", "dom"],
    "baseUrl": ".",
    "rootDir": "./src",
    "outDir": "./lib",
    "preserveSymlinks": true,
    "moduleResolution": "bundler",
    "module": "ESNext"
  },
  "include": ["src/**/*", "types.d.ts"],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "./scripts",
    "./lib"
  ]
}
