{
  "extends": "../../../tsconfig.base",
  "compilerOptions": {
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "declaration": true,
    "declarationMap": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "downlevelIteration": true,
    "lib": [
      "es2020",
      "dom"
    ],
    "rootDir": "./src",
    "outDir": "lib",
    "exactOptionalPropertyTypes": true,
    "paths": {
      "@icp-sdk/core/*": ["./node_modules/@icp-sdk/core/lib/esm/*"],
    },
    "types": [
      "jest"
    ]
  },
  "include": [
    "src/**/*",
    "deviceTransactionConfig.ts",
    "transaction.ts"
  ],
  "exclude": []
}