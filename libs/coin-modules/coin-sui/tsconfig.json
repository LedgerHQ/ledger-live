{
  "extends": "../../../tsconfig.base",
  "compilerOptions": {
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "declaration": true,
    "declarationMap": true,
    "downlevelIteration": true,
    "lib": [
      "es2020",
      "dom"
    ],
    "rootDir": "./src",
    "exactOptionalPropertyTypes": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "typeRoots": [
      "./node_modules/@types",
      "index.d.ts"
    ]
  },
  "include": [
    "src/**/*",
    "index.d.ts"
  ]
}