{
  "name": "@ledgerhq/coin-tester-polkadot",
  "version": "1.8.1",
  "description": "Ledger Polkadot Coin Tester",
  "main": "src/scenarii.test.ts",
  "keywords": [
    "Ledger",
    "LedgerWallet",
    "dot",
    "Polkadot",
    "Testing"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/LedgerHQ/ledger-live.git"
  },
  "bugs": {
    "url": "https://github.com/LedgerHQ/ledger-live/issues"
  },
  "homepage": "https://github.com/LedgerHQ/ledger-live/tree/develop/libs/coin-tester-modules/coin-tester-polkadot",
  "publishConfig": {
    "access": "public"
  },
  "typesVersions": {
    "*": {
      "lib/*": [
        "lib/*"
      ],
      "lib-es/*": [
        "lib-es/*"
      ]
    }
  },
  "exports": {
    "./lib/*": "./lib/*.js",
    "./lib-es/*": "./lib-es/*.js",
    "./*": {
      "require": "./lib/*.js",
      "default": "./lib-es/*.js"
    },
    "./package.json": "./package.json"
  },
  "license": "Apache-2.0",
  "scripts": {
    "clean": "rimraf lib lib-es",
    "build": "tsc --project tsconfig.build.json --outDir lib --module commonjs --moduleResolution node10 && tsc --project tsconfig.build.json -m ES6 --outDir lib-es",
    "prewatch": "pnpm build",
    "watch": "tsc --watch --project tsconfig.build.json",
    "watch:es": "tsc --watch --project tsconfig.build.json -m ES6 --outDir lib-es",
    "lint": "eslint ./src --no-error-on-unmatched-pattern --ext .ts,.tsx --cache",
    "lint:fix": "pnpm lint --fix",
    "typecheck": "tsc --noEmit",
    "unimported": "unimported",
    "start": "DOTENV_CONFIG_PATH=.env pnpm jest --runTestsByPath src/*.test.ts --forceExit --runInBand"
  },
  "dependencies": {
    "@ledgerhq/coin-framework": "workspace:^",
    "@ledgerhq/coin-polkadot": "workspace:^",
    "@ledgerhq/coin-tester": "workspace:^",
    "@ledgerhq/cryptoassets": "workspace:^",
    "@ledgerhq/types-cryptoassets": "workspace:^",
    "@ledgerhq/types-live": "workspace:^",
    "@polkadot/api": "11.2.1",
    "@polkadot/util-crypto": "12.6.2",
    "bignumber.js": "^9.1.2",
    "docker-compose": "^1.1.0",
    "chalk": "^4.1.2",
    "dotenv": "^16.4.5",
    "expect": "catalog:",
    "msw": "catalog:"
  },
  "devDependencies": {
    "@polkadot/util": "12.6.2",
    "@types/jest": "catalog:",
    "jest": "catalog:",
    "@swc/jest": "catalog:",
    "@swc/core": "catalog:",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  }
}
