{
  "extends": "../../../tsconfig.base",
  "compilerOptions": {
    "lib": [
      "es2020",
      "dom"
    ],
    "outDir": "lib",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "downlevelIteration": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "module": "ESNext",
    "moduleResolution": "bundler"
  },
  "include": [
    "src/**/*",
    "src/**/*.json"
  ]
}