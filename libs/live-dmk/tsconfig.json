{
  "extends": "../../tsconfig.base",
  "compilerOptions": {
    "jsx": "react",
    "declaration": true,
    "declarationMap": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "downlevelIteration": true,
    "lib": ["es2020", "dom"],
    "outDir": "lib-es",
    "baseUrl": ".",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "types": ["vitest/globals", "@testing-library/jest-dom"]
  },
  "include": ["src", "tests.setup.ts"]
}
