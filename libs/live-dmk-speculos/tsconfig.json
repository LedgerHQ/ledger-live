{
  "extends": "../../tsconfig.base",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "lib",
    "target": "es2020",
    "declaration": true,
    "declarationMap": true,
    "jsx": "react",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "downlevelIteration": true,
    "lib": ["es2020", "dom"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": ["vitest/globals", "@testing-library/jest-dom"],
    "skipLibCheck": true
  },
  "include": ["src"]
}
