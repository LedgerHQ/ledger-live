{
  "name": "@ledgerhq/live-wallet-sync-react",
  "version": "0.1.0",
  "description": "Ledger Live wallet sync React module",
  "keywords": [
    "Ledger"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/LedgerHQ/ledger-live.git"
  },
  "bugs": {
    "url": "https://github.com/LedgerHQ/ledger-live/issues"
  },
  "homepage": "https://github.com/LedgerHQ/ledger-live/tree/develop/libs/live-wallet-sync-react",
  "publishConfig": {
    "access": "public"
  },
  "main": "lib/index.js",
  "module": "lib-es/index.js",
  "types": "lib/index.d.ts",
  "license": "Apache-2.0",
  "peerDependencies": {
    "react": ">=16"
  },
  "dependencies": {
    "@ledgerhq/types-live": "workspace:*",
    "@ledgerhq/live-wallet": "workspace:*",
    "@ledgerhq/ledger-key-ring-protocol": "workspace:*",
    "@ledgerhq/live-common": "workspace:*",
    "lodash": "^4.17.21",
    "react": ">=16",
    "react-redux": "^8.1.3"
  },
  "devDependencies": {
    "@types/jest": "^29.5.10",
    "@testing-library/react": "14",
    "@testing-library/jest-dom": "^6.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "ts-jest": "^29.1.1",
    "@ledgerhq/coin-framework": "workspace:*",
    "@ledgerhq/cryptoassets": "workspace:*",
    "@types/lodash": "^4.14.200"
  },
  "scripts": {
    "clean": "rimraf lib lib-es",
    "build": "tsc && tsc -m esnext --moduleResolution bundler --outDir lib-es",
    "prewatch": "pnpm build",
    "watch": "tsc --watch",
    "watch:es": "tsc --watch -m esnext --moduleResolution bundler --outDir lib-es",
    "lint": "eslint ./src --no-error-on-unmatched-pattern --ext .ts,.tsx --cache",
    "lint:fix": "pnpm lint --fix",
    "typecheck": "tsc --noEmit",
    "unimported": "pnpm knip --directory ../.. -W libs/live-wallet-sync-react",
    "test": "jest",
    "coverage": "jest --coverage"
  },
  "typesVersions": {
    "*": {
      "*.json": [
        "*.json"
      ],
      "*": [
        "lib/*"
      ],
      "lib/*": [
        "lib/*"
      ],
      "lib-es/*": [
        "lib-es/*"
      ]
    }
  },
  "exports": {
    ".": {
      "require": "./lib/index.js",
      "default": "./lib-es/index.js"
    },
    "./lib/*": "./lib/*.js",
    "./lib/*.js": "./lib/*.js",
    "./lib-es/*": "./lib-es/*.js",
    "./lib-es/*.js": "./lib-es/*.js",
    "./*": {
      "require": "./lib/*.js",
      "default": "./lib-es/*.js"
    },
    "./*.js": {
      "require": "./lib/*.js",
      "default": "./lib-es/*.js"
    },
    "./package.json": "./package.json"
  }
}
