{
  "name": "ledger-live",
  "version": "0.0.0",
  "license": "MIT",
  "private": true,
  "packageManager": "pnpm@6.29.1",
  "scripts": {
    "clean": "git clean -fdX",
    "changelog": "changeset add",
    "bump": "changeset version",
    "prerelease": "pnpm run build:libs",
    "release": "changeset publish",
    "build": "pnpm run:turbo -- run build --ignore=apps/* --ignore=apps\\* --ignore=tools/actions/* --ignore=tools\\actions\\* --no-deps",
    "build:libs": "pnpm run:turbo -- run build --scope=@ledgerhq/* --include-dependencies --no-deps",
    "build:libs:force": "pnpm -r --filter=\"!./apps\" --filter=\"!ledger-live\" build",
    "build:apps": "pnpm run:turbo -- run build-ci --include-dependencies --no-deps",
    "build:actions": "pnpm run:turbo -- run build --scope=@actions/* --no-deps",
    "build:desktop": "pnpm run:turbo -- run build-ci --scope=live-desktop --include-dependencies --no-deps",
    "build:mobile": "pnpm run:turbo -- run build-ci --scope=live-mobile --include-dependencies --no-deps",
    "build:mobile:ios": "pnpm run:turbo -- run ios:ci:adhoc --scope=live-mobile --include-dependencies --no-deps",
    "test": "pnpm run:turbo -- run build test --include-dependencies --no-deps --ignore=tools/actions/* --ignore=tools\\actions\\*",
    "lld:dev": "pnpm run:turbo -- run start --scope=live-desktop --include-dependencies --no-deps --no-cache",
    "llm:dev": "pnpm run:turbo -- run start --scope=live-mobile --include-dependencies --no-deps --no-cache",
    "desktop": "pnpm --filter live-desktop",
    "mobile": "pnpm --filter live-mobile",
    "common": "pnpm --filter live-common",
    "ui:react": "pnpm --filter react-ui",
    "ui:native": "pnpm --filter native-ui",
    "ui:icons": "pnpm --filter icons-ui",
    "ui:shared": "pnpm --filter shared-ui",
    "actions": "pnpm --filter @actions/*",
    "run:turbo": "x-run node_modules/turbo/bin/turbo"
  },
  "devDependencies": {
    "@changesets/cli": "^2.21.1",
    "pnpm-utils": "workspace:*",
    "turbo": "^1.1.6",
    "x-run": "workspace:*"
  },
  "pnpm": {
    "overrides": {
      "stellar-base>sodium-native": "^3.2.1",
      "metro": "^0.67.0",
      "metro-config": "^0.67.0",
      "metro-core": "^0.67.0",
      "metro-react-native-babel-transformer": "^0.67.0",
      "metro-resolver": "^0.67.0",
      "metro-runtime": "^0.67.0",
      "metro-transform-worker": "^0.67.0"
    }
  }
}
