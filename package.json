{
  "name": "ledger-live",
  "version": "0.0.0",
  "license": "MIT",
  "private": true,
  "packageManager": "pnpm@7.9.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/LedgerHQ/ledger-live.git"
  },
  "bugs": {
    "url": "https://github.com/LedgerHQ/ledger-live/issues"
  },
  "scripts": {
    "clean": "git clean -fdX",
    "changelog": "changeset add",
    "bump": "changeset version",
    "prerelease": "pnpm run build:libs",
    "release": "changeset publish",
    "build": "pnpm turbo run build --ignore=apps/* --ignore=apps\\* --ignore=tools/actions/* --ignore=tools\\actions\\* --no-deps",
    "build:libs": "pnpm turbo run build --filter=\"!./apps/**\" --scope=@ledgerhq/* --include-dependencies --no-deps",
    "build:libs:force": "pnpm -r --filter=\"!./apps/**\" --filter=\"!ledger-live\" build",
    "build:actions": "pnpm turbo run build --filter=@actions/* --no-deps",
    "build:cli": "pnpm turbo run build --filter=live-cli",
    "build:llc": "pnpm turbo run build --filter=\"!./apps/**\" --scope=@ledgerhq/live-common --include-dependencies --no-deps",
    "build:lld": "pnpm turbo run build --filter=ledger-live-desktop",
    "build:lld:deps": "pnpm turbo run build --filter=\"ledger-live-desktop^...\"",
    "build:llm:android": "pnpm turbo run android:apk --filter=live-mobile",
    "build:llm:ios": "pnpm turbo run ios:local:ipa --filter=live-mobile",
    "build:llm:deps": "pnpm turbo run build --filter=\"live-mobile^...\"",
    "build:ljs": "pnpm turbo run build --filter=\"./libs/ledgerjs/**\"",
    "build-ci:llm:ios": "pnpm turbo run ios:ci:adhoc --filter=live-mobile",
    "build-ci:llm:android": "pnpm turbo run android:apk --filter=live-mobile",
    "clean:ljs": "pnpm turbo run clean --filter=\"./libs/ledgerjs/**\"",
    "doc:ljs": "pnpm turbo run doc --filter=\"./libs/ledgerjs/**\"",
    "watch:ljs": "pnpm turbo run watch --filter=\"./libs/ledgerjs/**\"",
    "watch:common": "pnpm turbo run watch --filter=live-common",
    "dev:cli": "pnpm turbo run watch --filter=live-cli",
    "dev:lld": "pnpm turbo run start --filter=ledger-live-desktop",
    "dev:llm": "pnpm turbo run start --filter=live-mobile",
    "release:lld": "pnpm turbo run release --filter=ledger-live-desktop",
    "pre:lld": "pnpm turbo run pre-build --filter=ledger-live-desktop",
    "nightly": "pnpm turbo run nightly --include-dependencies --no-deps",
    "nightly:lld": "pnpm turbo run nightly --filter=ledger-live-desktop",
    "test": "pnpm turbo run test --concurrency=100%",
    "run:cli": "./apps/cli/bin/index.js",
    "lint": "pnpm turbo run lint",
    "lint:fix": "pnpm turbo run lint:fix",
    "typecheck": "pnpm turbo run typecheck",
    "desktop": "pnpm --filter ledger-live-desktop",
    "cli": "pnpm --filter live-cli",
    "mobile": "pnpm --filter live-mobile",
    "common": "pnpm --filter live-common",
    "common-tools": "pnpm --filter live-common-tools",
    "bot:github": "pnpm --filter live-github-bot",
    "ljs:cryptoassets": "pnpm --filter cryptoassets",
    "ljs:devices": "pnpm --filter cryptoassets",
    "ljs:errors": "pnpm --filter cryptoassets",
    "ljs:hw-app-algorand": "pnpm --filter hw-app-algorand",
    "ljs:hw-app-btc": "pnpm --filter hw-app-btc",
    "ljs:hw-app-cosmos": "pnpm --filter hw-app-cosmos",
    "ljs:hw-app-eth": "pnpm --filter hw-app-eth",
    "ljs:hw-app-helium": "pnpm --filter hw-app-helium",
    "ljs:hw-app-polkadot": "pnpm --filter hw-app-polkadot",
    "ljs:hw-app-solana": "pnpm --filter hw-app-solana",
    "ljs:hw-app-str": "pnpm --filter hw-app-str",
    "ljs:hw-app-tezos": "pnpm --filter hw-app-tezos",
    "ljs:hw-app-trx": "pnpm --filter hw-app-trx",
    "ljs:hw-app-xrp": "pnpm --filter hw-app-xrp",
    "ljs:hw-transport": "pnpm --filter hw-transport",
    "ljs:hw-transport-http": "pnpm --filter hw-transport-http",
    "ljs:hw-transport-mocker": "pnpm --filter hw-transport-mocker",
    "ljs:hw-transport-node-ble": "pnpm --filter hw-transport-node-ble",
    "ljs:hw-transport-node-hid": "pnpm --filter hw-transport-node-hid",
    "ljs:hw-transport-node-hid-noevents": "pnpm --filter hw-transport-node-hid-noevents",
    "ljs:hw-transport-node-hid-singleton": "pnpm --filter hw-transport-node-hid-singleton",
    "ljs:hw-transport-node-speculos": "pnpm --filter hw-transport-node-speculos",
    "ljs:hw-transport-node-speculos-http": "pnpm --filter hw-transport-node-speculos-http",
    "ljs:hw-transport-web-ble": "pnpm --filter hw-transport-web-ble",
    "ljs:hw-transport-webhid": "pnpm --filter hw-transport-webhid",
    "ljs:hw-transport-webusb": "pnpm --filter hw-transport-webusb",
    "ljs:logs": "pnpm --filter logs",
    "ljs:react-native-hid": "pnpm --filter react-native-hid",
    "ljs:react-native-hw-transport-ble": "pnpm --filter react-native-hw-transport-ble",
    "ljs:types-cryptoassets": "pnpm --filter types-cryptoassets",
    "ljs:types-devices": "pnpm --filter types-devices",
    "ljs:types-live": "pnpm --filter types-live",
    "ui:react": "pnpm --filter react-ui",
    "ui:native": "pnpm --filter native-ui",
    "ui:icons": "pnpm --filter icons-ui",
    "ui:crypto-icons": "pnpm --filter crypto-icons-ui",
    "ui:shared": "pnpm --filter shared-ui",
    "actions": "pnpm --filter @actions/*"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.6",
    "@changesets/cli": "^2.24.3",
    "create-release-hash": "workspace:*",
    "migrate-branch": "workspace:*",
    "pnpm-utils": "workspace:*",
    "rimraf": "^3.0.2",
    "turbo": "1.4.3",
    "zx": "^7.0.7"
  },
  "pnpm": {
    "overrides": {
      "stellar-base>sodium-native": "^3.2.1",
      "metro": "^0.67.0",
      "metro-config": "^0.67.0",
      "metro-core": "^0.67.0",
      "metro-react-native-babel-transformer": "^0.67.0",
      "metro-resolver": "^0.67.0",
      "metro-runtime": "^0.67.0",
      "metro-transform-worker": "^0.67.0",
      "remove-flow-types-loader>flow-remove-types": "^2",
      "remove-flow-types-loader>loader-utils": "*"
    },
    "patchedDependencies": {
      "react-native-fast-crypto@2.2.0": "patches/react-native-fast-crypto@2.2.0.patch",
      "react-native-video@5.2.0": "patches/react-native-video@5.2.0.patch",
      "react-native-image-crop-tools@1.6.2": "patches/react-native-image-crop-tools@1.6.2.patch"
    }
  }
}
