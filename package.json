{
  "name": "@ledgerhq/wallet-common",
  "version": "1.0.0",
  "main": "lib/index.js",
  "license": "MIT",
  "scripts": {
    "flow-typed": "flow-typed install -s",
    "build": "rm -rf lib && babel --ignore __tests__ -sd lib src && flow-copy-source -i \"__tests__/**\" src lib",
    "prepublish": "yarn build && yarn documentation",
    "watch": "babel -wsd lib src && flow-copy-source -wv src lib",
    "documentation": "documentation build src/** --project-name '@ledgerhq/wallet-common' --project-version `node -e \"console.log(require('./package.json').version)\"` --project-homepage https://github.com/LedgerHQ/ledger-wallet-common -g -f html -o documentation-website/public/docs",
    "prettier": "prettier --write 'src/**/*.js'",
    "lint": "eslint src",
    "flow": "flow src",
    "test": "TZ=America/New_York jest src"
  },
  "files": [
    "lib",
    "src",
    "flow"
  ],
  "jest": {
    "setupFiles": [
      "<rootDir>/jest/globals.js"
    ]
  },
  "dependencies": {
    "@ledgerhq/currencies": "^4.10.1",
    "axios": "^0.18.0",
    "invariant": "^2.2.2",
    "lodash": "^4.17.4",
    "prando": "^3.0.1",
    "react": "^16.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.0.2",
    "babel-jest": "^22.4.3",
    "babel-preset-env": "^1.6.1",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-stage-0": "^6.24.1",
    "documentation": "^6.1.0",
    "eslint": "^4.19.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-flowtype": "^2.39.1",
    "eslint-plugin-react": "^7.4.0",
    "flow-bin": "^0.69.0",
    "flow-copy-source": "^1.2.1",
    "flow-typed": "^2.2.3",
    "jest": "^22.4.3",
    "prettier": "^1.8.2",
    "timemachine": "^0.3.0"
  }
}
