{
  "$schema": "https://turborepo.org/schema.json",
  "baseBranch": "origin/develop",
  "pipeline": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        "dist/**",
        "lib/**",
        "lib-es/**",
        "build/**"
      ]
    },
    "build-ci": {
      "cache": false,
      "dependsOn": [
        "^build"
      ]
    },
    "lint": {
      "outputs": []
    },
    "release": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [],
      "cache": false
    },
    "typecheck": {
      "outputs": [],
      "dependsOn": [
        "^build"
      ]
    },
    "test": {
      "dependsOn": [
        "lint",
        "typecheck",
        "build"
      ],
      "outputs": []
    },
    "start": {
      "cache": false,
      "dependsOn": [
        "^build"
      ]
    },
    "nightly": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [],
      "cache": false
    },
    "nightly-publish": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [],
      "cache": false
    },
    "@ledgerhq/icons-ui#build": {
      "outputs": [
        "react/**",
        "native/**",
        "index.js"
      ]
    },
    "live-mobile#lint": {
      "dependsOn": [
        "^build"
      ],
      "outputs": []
    },
    "ledger-live-desktop#lint": {
      "dependsOn": [
        "^build"
      ],
      "outputs": []
    },
    "ledger-live-desktop#test": {
      "dependsOn": [
        "ledger-live-desktop#build:testing"
      ],
      "outputs": []
    },
    "ledger-live-desktop#build:testing": {
      "cache": false,
      "dependsOn": [
        "^build"
      ],
      // "outputs": [
      //   ".webpack/**",
      //   "dist/**"
      // ]
    }
  }
}